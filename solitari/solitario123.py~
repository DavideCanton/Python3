import numpy as np
import numpy.random as nprand

def simula(num):
    num = nprand.permutation(num)
    for i in range(3):
        if len((num[i::3] == i + 1).nonzero()[0]):
            return False
    return True


if __name__ == '__main__':
    max_t = 1000
    usciti = 0
    num = np.tile(np.arange(1, 11), 4)

    for _ in range(max_t):
        if simula(num):
            usciti += 1

    print("Uscito", usciti, "volte su", max_t)
